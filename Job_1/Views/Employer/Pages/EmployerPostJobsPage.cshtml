@{
}
@{
    ViewData["Title"] = "Employer Manage Jobs Page";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide">
    <style>
        /* Basic CSS styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .hero {
            text-align: center;
            padding: 100px 0;
            background-color: #f4f4f4;
        }

        .search-bar {
            max-width: 600px;
            margin: 0 auto;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .cta-button {
            background-color: #333;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

            .cta-button:hover {
                background-color: #555;
            }

        .benefits {
            text-align: center;
            padding: 50px 0;
        }

            .benefits ul {
                list-style-type: none;
                padding: 0;
            }

            .benefits li {
                display: inline-block;
                margin: 0 20px;
            }

        .featured-jobs {
            text-align: center;
            padding: 50px 0;
        }

        .job-listing {
            margin: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            display: inline-block;
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }

        h1 {
            font-family: "Audiowide", sans-serif;
        }
    </style>
</head>
<body>

    <header>
        <h1>JobSeekR</h1>
        <nav>
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerHomePage">Home</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerCandidateSearchPage">Candidate Search</a> |
            <a class="btn btn-primary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerPostJobsPage">Post Job</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerManageJobsPage">Manage Jobs</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerManageApplications">Manage Applications</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerProfilePage">Profile</a> |

            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerAccountPage">Account</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerNotificationsPage">Notifications</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerLogout">Log Out</a>


        </nav>
    </header>

    <div class="container">
        <form action="/Home/EmployerPostJobs" method="post">

            <div class="row g-3">
                <div class="col-sm-6">
                    <label for="jobTitle" class="form-label">Job Title</label>
                    <input type="text" class="form-control" id="jobTitle" name="jobTitle" placeholder="" value="" required="">
                </div>
                <div class="form-group">
                    <label for="jobDecription">Job Decription</label>
                    <textarea class="form-control" id="jobDecription" name="jobDecription" rows=" 3"></textarea>
                </div>


                <div class="col-12">
                    <label for="requirments" class="form-label">Requirments <span class="text-body-secondary"></span></label>
                    <input type="text" class="form-control" id="requirments" name="requirments" required="">

                </div>
                <div class="col-sm-6">
                    <label for="company" class="form-label">Company</label>
                    <input type="text" class="form-control" id="company" name="company" placeholder="" value="" required="">
                </div>
                <div class="col-sm-6">
                    <label for="category" class="form-label">Category</label>
                    <input type="text" class="form-control" id="category" name="category" placeholder="" value="" required="">
                </div>
                <div class="col-sm-6">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" name="location" placeholder="" value="" required="">
                </div>
                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Post</button>
                </div>


            </div>
        </form>
    </div>


    <footer>
        <p>K2343849</p>
        <p>K2304381</p>
    </footer>

</body>
</html>
