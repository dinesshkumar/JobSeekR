@{
    ViewData["Title"] = "Employee Login Page";
}

<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
        <div class="col-lg-7 text-center text-lg-start">
            <h1 class="display-4 fw-bold text-body-emphasis mb-3 ">Welcome to JobSeekR</h1>
            <p class="col-lg-10 fs-4 ">Start your job search journey here.<br />Find your dream job with just a few clicks. Let's get started!</p>
        </div>
        <div class="col-md-10 mx-auto col-lg-5">
            <form class="p-4 p-md-5 border rounded-1 bg-body-tertiary" action="/Home/EmployeeLogin" method="post">
                <h6>Please enter valid email and password</h6>

                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingInput" name="userEmail" placeholder="name@example.com">
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingPassword" name="userPassword" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>
                <div class="form-floating mb-3">
                <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
                </div>
                <div class="form-floating mb-3">
                    <a class="w-100 btn btn-lg btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">Back to Home Page</a>
        </div>

                
 
            </form>
            
        </div>
    </div>
</div>