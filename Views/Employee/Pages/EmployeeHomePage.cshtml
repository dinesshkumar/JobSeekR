@{
}
@{
    ViewData["Title"] = "Employee Home Page";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide">


    <style>
        /* Basic CSS styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .hero {
            text-align: center;
            padding: 100px 0;
            background-color: #f4f4f4;
        }

        .search-bar {
            max-width: 600px;
            margin: 0 auto;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .cta-button {
            background-color: #333;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

            .cta-button:hover {
                background-color: #555;
            }

        .benefits {
            text-align: center;
            padding: 50px 0;
        }

            .benefits ul {
                list-style-type: none;
                padding: 0;
            }

            .benefits li {
                display: inline-block;
                margin: 0 20px;
            }

        .featured-jobs {
            text-align: center;
            padding: 50px 0;
        }

        .job-listing {
            margin: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            display: inline-block;
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }
        h1{
              font-family: "Audiowide", sans-serif;
        }
    </style>

</head>
<body>

    <header>
        <h1>JobSeekR</h1>
        <nav>
            <a class="btn btn-primary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeHomePage">Home</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeJobSearchPage">Job Search</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeManageJobsPage">Manage Jobs</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeProfilePage">Profile</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeAccountPage">Account</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeNotificationsPage">Notifications</a> |

            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeLogout">Log Out</a>


        </nav>
    </header>

    <div class="container">
        <div class="px-4 py-5 my-5 text-center">
            <h2 class="display-5 fw-bold">Hello @ViewBag.user_name,</h2>
            <h3 class="display-5 fw-bold">Start Your Job Search Today!</h3>

            <div class="col-lg-6 mx-auto">
                <p class="lead mb-4">Welcome to our job search page!<br />Start your journey towards finding the perfect job for you. Whether you're a recent graduate looking for your first job or an experienced professional seeking new opportunities, our platform has something for everyone.</p>
                

            </div>

        </div>

        <div class="benefits">
            <h2>Why Choose Us?</h2>
            <ul>
                <li>Access thousands of job listings</li>
                <li>Connect with top companies</li>
                <li>Get personalized job recommendations</li>
            </ul>
        </div>

        <div class="featured-jobs">
            <h2>Recommended Jobs</h2>
            <div class="job-listing">
                <h3>Job Title 1</h3>
                <p>Description of job listing 1.</p>
                <a href="#" class="cta-button">Apply Now</a>
            </div>
            <div class="job-listing">
                <h3>Job Title 2</h3>
                <p>Description of job listing 2.</p>
                <a href="#" class="cta-button">Apply Now</a>
            </div>
            <div class="job-listing">
                <h3>Job Title 3</h3>
                <p>Description of job listing 3.</p>
                <a href="#" class="cta-button">Apply Now</a>
            </div>
        </div>

    </div>

    <footer>
        <p>K2343849</p>
        <p>K2304381</p>
    </footer>

</body>
</html>
