@{
    ViewData["Title"] = "Employee Job Search Results Page";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide">
    <style>
        /* Basic CSS styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .hero {
            text-align: center;
            padding: 100px 0;
            background-color: #f4f4f4;
        }

        .search-bar {
            max-width: 600px;
            margin: 0 auto;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .cta-button {
            background-color: #333;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

            .cta-button:hover {
                background-color: #555;
            }

        .benefits {
            text-align: center;
            padding: 50px 0;
        }

            .benefits ul {
                list-style-type: none;
                padding: 0;
            }

            .benefits li {
                display: inline-block;
                margin: 0 20px;
            }

        .featured-jobs {
            text-align: center;
            padding: 50px 0;
        }

        .job-listing {
            margin: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            display: inline-block;
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }

        h1 {
            font-family: "Audiowide", sans-serif;
        }
    </style>
</head>
<body>

    <header>
        <h1>JobSeekR</h1>
        <nav>
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeHomePage">Home</a> |
            <a class="btn btn-primary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeJobSearchPage">Job Search</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeManageJobsPage">Manage Jobs</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeProfilePage">Profile</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeAccountPage">Account</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeNotificationsPage">Notifications</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployeeLogout">Log Out</a>


        </nav>
    </header>

    <div class="container">
                <form action="/Home/EmployeeJobSearchResultsPage" method="post">

            <div class="row g-3 ">
                <div class="col-sm-6">
                    <label for="JobTitleQualificationDomainSkillsKeywordorCompany" class="form-label">Job Title, Qualification, Domain, Skills, Keyword or Company</label>
                    <input type="text" class="form-control" id="JobTitleQualificationDomainSkillsKeywordorCompany" name="JobTitleQualificationDomainSkillsKeywordorCompany" placeholder="Enter your Job Title, Qualification, Domain, Skills, Keyword or Company" value="" required="">
                </div>
                <div class="col-sm-6">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="Location" name="location" placeholder="Enter your Location" value="">
                </div>

                <div class="col-sm-12" style="text-align: center">
                    <button class="btn btn-primary" type="submit">Search Jobs</button>
                </div>

            </div>
            </form>
    </div>

        <div class="container mt-5">
            <h2>Search Results</h2>
            <div class="card">
                @foreach (var job in @ViewBag.jobs)
                {

                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between">
                                 <form action="/Home/EmployeeJobApplyButton" method="post">
                                <p value="@job.job_title" name="job_title">@job.job_title</p>
                                    <p>Description: @job.job_description</p>
                                    <p>Requirement: @job.job_requirements</p>
                                    <p>Company: @job.job_company</p>
                                    <p>Category: @job.job_category</p>
                                    <p>Location: @job.job_location</p>
                                    <p>Posted on: @job.job_posted_at</p>

                                <div>
                                    <button class="btn btn-primary" value="@job.job_id" name="job_id" onclick="apply()">Apply</button>

                                </div>
                            </form>


                            </div>
                        </li>

                        <!-- Add more job listings here -->
                    </ul>
                }


            </div>
        </div>


    <script>
        function apply() {
            alert("Job applied successfully.\nPlease check notification for instant updates.\nThanks you");

        }
    </script>

    <footer>
        <p>K2343849</p>
        <p>K2304381</p>
    </footer>

</body>

</html>
