@{
    ViewData["Title"] = "Employer Candidate Search Results Page";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide">
    <style>
        /* Basic CSS styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .hero {
            text-align: center;
            padding: 100px 0;
            background-color: #f4f4f4;
        }

        .search-bar {
            max-width: 600px;
            margin: 0 auto;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .cta-button {
            background-color: #333;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

            .cta-button:hover {
                background-color: #555;
            }

        .benefits {
            text-align: center;
            padding: 50px 0;
        }

            .benefits ul {
                list-style-type: none;
                padding: 0;
            }

            .benefits li {
                display: inline-block;
                margin: 0 20px;
            }

        .featured-jobs {
            text-align: center;
            padding: 50px 0;
        }

        .job-listing {
            margin: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            display: inline-block;
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }

        h1 {
            font-family: "Audiowide", sans-serif;
        }
    </style>
</head>
<body>

    <header>
        <h1>JobSeekR</h1>
        <nav>
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerHomePage">Home</a> |
            <a class="btn btn-primary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerCandidateSearchPage">Candidate Search</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerPostJobsPage">Post Job</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerManageJobsPage">Manage Jobs</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerManageApplications">Manage Applications</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerProfilePage">Profile</a> |

            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerAccountPage">Account</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerNotificationsPage">Notifications</a> |

            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerLogout">Log Out</a>


        </nav>
    </header>

    <div class="container">

        <form action="/Home/EmployerCandidateSearchResultsPage" method="post">


            <div class="row g-3 ">
                <div class="col-sm-6">
                    <label for="JobTitleQualificationDomainSkillsKeywordorCompany" class="form-label">Job Title, Qualification, Domain, Skills, Keyword or Company</label>
                    <input type="text" class="form-control" id="JobTitleQualificationDomainSkillsKeywordorCompany" name="JobTitleQualificationDomainSkillsKeywordorCompany" placeholder="Enter your Job Title, Qualification, Domain, Skills, Keyword or Company" value="" required="">
                </div>
                <div class="col-sm-6">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="Location" name="location" placeholder="Enter your Location" value="" required="">
                </div>

                <div class="col-sm-12" style="text-align: center">
                    <button class="btn btn-primary" type="submit">Search Jobs</button>
                </div>

            </div>
        </form>

        @foreach (var jobSeekerProfile in @ViewBag.jobSeekerProfiles)
{
        <div class="job-listing">
                <h2>@jobSeekerProfile.job_seeker_name</h2>
                <p>Profile Summary: @jobSeekerProfile.job_seeker_profile_summary</p>
                <p>Skills: @jobSeekerProfile.job_seeker_skills</p>
                <p>Education: @jobSeekerProfile.job_seeker_education</p>
                <p>Experience: @jobSeekerProfile.job_seeker_experience</p>
                <p>Location: @jobSeekerProfile.job_seeker_location</p>
                <p>Achievement: @jobSeekerProfile.job_seeker_achievement</p>
              <a href="#" class="cta-button">Download Resume</a>
        </div>
}

    </div>
    <footer>
        <p>K2343849</p>
        <p>K2304381</p>
    </footer>

</body>
</html>
