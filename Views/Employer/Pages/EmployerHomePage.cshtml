@{
}

@{
    ViewData["Title"] = "Employer Home Page";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide">


    <style>
        /* Basic CSS styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .hero {
            text-align: center;
            padding: 100px 0;
            background-color: #f4f4f4;
        }

        .search-bar {
            max-width: 600px;
            margin: 0 auto;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .cta-button {
            background-color: #333;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
        }

            .cta-button:hover {
                background-color: #555;
            }

        .benefits {
            text-align: center;
            padding: 50px 0;
        }

            .benefits ul {
                list-style-type: none;
                padding: 0;
            }

            .benefits li {
                display: inline-block;
                margin: 0 20px;
            }

        .featured-jobs {
            text-align: center;
            padding: 50px 0;
        }

        .job-listing {
            margin: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            display: inline-block;
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }
        h1{
              font-family: "Audiowide", sans-serif;
        }
    </style>

</head>
<body>

    <header>
        <h1>JobSeekR</h1>
        <nav>
            <a class="btn btn-primary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerHomePage">Home</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerCandidateSearchPage">Candidate Search</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerPostJobsPage">Post Job</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerManageJobsPage">Manage Jobs</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerManageApplications">Manage Applications</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerProfilePage">Profile</a> |

            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerAccountPage">Account</a> |
            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerNotificationsPage">Notifications</a> |

            <a class="btn btn-secondary rounded-pill px-3" asp-area="" asp-controller="Home" asp-action="EmployerLogout">Log Out</a>


        </nav>
    </header>

    <div class="container">
        <div class="px-4 py-5 my-5 text-center">
            <h2 class="display-5 fw-bold">Hello @ViewBag.user_name,</h2>
            <h3 class="display-5 fw-bold">Find your next colleague Today!</h3>

            <div class="col-lg-6 mx-auto">
                <p class="lead mb-4"></p>
                

            </div>

        </div>



    </div>

    <footer>
        <p>K2343849</p>
        <p>K2304381</p>
    </footer>

</body>
</html>
